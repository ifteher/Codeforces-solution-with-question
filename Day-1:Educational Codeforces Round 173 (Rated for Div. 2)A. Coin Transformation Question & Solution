Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
int t;
cin>>t;
while(t--)
{
   long long int n;
   cin>>n;
   long long int c=1;
   while(n>3)
   {
   c*=2;
   n/=4;
   }
   cout<<c<<endl;
}
}
